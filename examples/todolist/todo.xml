<template>
  <todolist id="todolist" py_todos="self.todos"></todolist>

  <div class="footer">
    <input id="input_field" bind_text="self.text"></input>
    <button id="add_button" on_click="self.add_clicked">
      <text id="button_text" py_text="f'add todo #{len(self.todos)}'"></text>
    </button>
  </div>
</template>