<?xml version="1.0"?>

<application>
  <div class="background">
    <div class="box" id="red"></div>
    <div class="box" id="green">This is some text. More text.</div>
    <div
      py_class = "self.get_class()"
      on_click="self.click({event})">

    </div>

    <itemlist>
      <item control="for item in items">
        <div control="if item.name"></div>
      </item>
    </itemlist>
  </div>
</application>